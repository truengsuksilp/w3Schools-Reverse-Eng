  <section class='card js-card columns is-mobile'>
    <!-- LEFT CARD -->
    <article class='card-content card-left column'>
      <h1 class='card-title'> JavaScript </h1>
      <h3 class='card-desc'> The language for programming web pages </h3>
      <div class='card-left-buttons'>
        <a href="/exercises/js/" class='button card-buttons'id='is-w3-green'>Learn JavaScript</a>
        <a href="https://www.w3schools.com/jsref/" class='button is-dark card-buttons'>JavaScript Reference</a>
      </div>
    </article>

    <!-- RIGHT CARD -->
    <%- include('./partials/rightCards/_rightCardJS.ejs', { header: 'JavaScript Example', link: 'https://www.w3schools.com/js/tryit.asp?filename=tryjs_default' }) %>
  </section>

  <!-- IDE BOTTOM CARD -->
  <section class='card ide-card columns is-mobile'>
    <article class='card-content card-right column'>
      <h2 class='card-header'> Sandbox Code Editor: </h2>
      <div class='card-ide'>
        <div id='my-js'> 
        </div>
      </div>
    </article>
